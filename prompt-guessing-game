                keywords: ["פרח", "ורוד", "עלי", "כותרת", "צהוב"]
            },
            {
                title: "אתגר 5: בית קטן",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/house.jpg",
                keywords: ["בית", "גג", "חלון", "חלונות", "חצר", "דלת"]
            },
            {
                title: "אתגר 6: רכב ספורט",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/vehicle.jpg.jpg",
                keywords: ["מכונית", "ספורט", "אדום", "מהיר", "רכב", "גלגלים"]
            },
            {
                title: "אתגר 7: דג צבעוני",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/fish.jpg",
                keywords: ["דג", "אלמוגים", "כחול", "מים", "כחול", "זנב", "סנפירים"]
            },
            {
                title: "אתגר 8: פרפר צבעוני",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/butterfly.jpg.jpg",
                keywords: ["פרפר", "כנפיים", "צהוב", "בחוץ", "גבעול"]
            },
            {
                title: "אתגר 9: עץ גדול",
                description: "נסה לנחש מה רואים בתמונה",
               image: "https://lomdot.education.gov.il/cet/datainformation/tree.jpg.jpg",
                keywords: ["עץ", "גבוה", "עלים", "ירוק", "גזע", "חום"]
            },
            {
                title: "אתגר 10: כלב חמוד",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/dog.jpg.jpg",
                keywords: ["כלב", "לבן", "זנב", "אוזניים", "חמוד" ,"כתומים"]
            },
            {
                title: "אתגר 11: לילה עם כוכבים",
                description: "נסה לנחש מה רואים בתמונה",
               image: " https://lomdot.education.gov.il/cet/datainformation/Stars.jpg",
                keywords: ["לילה", "כוכבים", "עצים", "שמיים", "כהה", "חושך"]
            }
        ];

        function updateDisplay() {
            document.getElementById('current-score').textContent = currentScore;
            document.getElementById('current-level').textContent = `${currentLevel}/${challenges.length}`;
            document.getElementById('attempts').textContent = attempts;
        }

        function loadChallenge() {
            const challenge = challenges[currentLevel - 1];
            if (challenge) {
                document.getElementById('challenge-title').textContent = challenge.title;
                document.getElementById('challenge-description').textContent = "כתבו פרומפט שיצור את התמונה";
                document.getElementById('target-image').src = challenge.image;
                document.getElementById('prompt-input').value = '';
                currentTip = 1;
                showCurrentTip();
                
                // עדכון כפתורים
                const prevBtn = document.getElementById('prev-btn');
                const nextBtn = document.getElementById('next-btn');
                
                if (currentLevel <= 1) {
                    prevBtn.style.opacity = '0.5';
                    prevBtn.disabled = true;
                    prevBtn.className = 'btn btn-secondary';
                } else {
                    prevBtn.style.opacity = '1';
                    prevBtn.disabled = false;
                    if (hasMovedNext) {
                        prevBtn.className = 'btn btn-primary';
                    } else {
                        prevBtn.className = 'btn btn-secondary';
                    }
                }
                
                // עדכון כפתור הבא בהתאם לאתגר
                if (currentLevel >= challenges.length) {
                    // האתגר האחרון - כפתור "סיום" שמקפיץ את הודעת הסיום
                    nextBtn.innerHTML = 'סיום 🏁';
                    nextBtn.className = 'btn btn-primary';
                    nextBtn.onclick = showFinalMessage;
                } else {
                    // לא האתגר האחרון
                    nextBtn.innerHTML = 'הבא ⏮️';
                    nextBtn.className = 'btn btn-primary';
                    nextBtn.onclick = nextChallenge;
                }
                
                // עדכון התצוגה לוודא שהרמה נכונה
                updateDisplay();
            }
        }

        function showCurrentTip() {
            document.querySelectorAll('.tip').forEach(tip => tip.classList.remove('active'));
            const tip = document.getElementById(`tip-${currentTip}`);
            if (tip) {
                tip.classList.add('active');
            }
        }

        function showTip() {
            currentTip = (currentTip % 4) + 1;
            showCurrentTip();
        }

        function analyzePrompt(prompt) {
            const challenge = challenges[currentLevel - 1];
            let score = 0;
            let feedback = [];

            const words = prompt.toLowerCase();
            let matchedKeywords = 0;

            challenge.keywords.forEach(keyword => {
                if (words.includes(keyword.toLowerCase())) {
                    matchedKeywords++;
                    score += 15;
                }
            });

            if (prompt.length > 20) score += 10;
            if (prompt.length > 50) score += 10;
            if (words.includes('צבע') || words.includes('צבעים')) score += 5;
            if (words.includes('תאורה') || words.includes('אור')) score += 5;
            if (words.includes('רקע')) score += 5;

            if (matchedKeywords === challenge.keywords.length) {
                feedback.push("🎯 זיהית את כל האלמנטים העיקריים!");
                score += 20;
            } else if (matchedKeywords > challenge.keywords.length / 2) {
                feedback.push("👍 זיהית רוב האלמנטים החשובים");
            } else {
                feedback.push("💡 נסה להוסיף פרטים נוספים על מה שרואים בתמונה");
            }

            if (prompt.length < 20) {
                feedback.push("📝 הפרומפט קצר מידי - הוסף יותר פרטים");
            } else if (prompt.length > 100) {
                feedback.push("✨ פרומפט מפורט ועשיר!");
                score += 10;
            }

            return {
                score: Math.min(score, 100),
                feedback: feedback.join('\n')
            };
        }

        function submitPrompt() {
            const prompt = document.getElementById('prompt-input').value.trim();
            if (!prompt) {
                alert('אנא כתוב פרומפט לפני השליחה!');
                return;
            }

            attempts++;
            const result = analyzePrompt(prompt);
            
            currentScore += result.score;
            
            // הצגת המודל עם התוצאות
            showModal(result);
            
            updateDisplay();
        }

        function showModal(result) {
            const modalOverlay = document.getElementById('modal-overlay');
            const modalScore = document.getElementById('modal-score');
            const modalFeedback = document.getElementById('modal-feedback');
            const modalProgressFill = document.getElementById('modal-progress-fill');

            modalScore.textContent = result.score;
            modalFeedback.textContent = result.feedback;
            
            modalOverlay.classList.add('show');

            // אנימציה של הפרוגרס בר
            setTimeout(() => {
                modalProgressFill.style.width = result.score + '%';
            }, 300);

            // צבע הציון בהתאם לרמה
            setTimeout(() => {
                if (result.score >= 80) {
                    modalScore.style.color = '#28a745';
                } else if (result.score >= 60) {
                    modalScore.style.color = '#ffc107';
                } else {
                    modalScore.style.color = '#dc3545';
                }
            }, 500);
        }

        function closeModal() {
            document.getElementById('modal-overlay').classList.remove('show');
        }

        function nextChallengeFromModal() {
            closeModal();
            nextChallenge();
        }

        function nextChallenge() {
            if (currentLevel < challenges.length) {
                currentLevel++;
                hasMovedNext = true;
                loadChallenge();
                updateDisplay();
            } else {
                alert(`🎉 סיימת את כל האתגרים!\nציון סופי: ${currentScore}\nמספר ניסיונות: ${attempts}\n\nיש ${challenges.length} אתגרים במשחק!`);
            }
        }

        function prevChallenge() {
            if (currentLevel > 1) {
                currentLevel--;
                loadChallenge();
                updateDisplay();
            }
        }

        // סגירת המודל בלחיצה על הרקע
        document.getElementById('modal-overlay').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // סגירת המודל במקש Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
            if (e.ctrlKey && e.key === 'Enter') {
                submitPrompt();
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log(`נטענו ${challenges.length} אתגרים`);
            console.log('רשימת כל האתגרים:', challenges.map((c, i) => `${i+1}: ${c.title}`));
            loadChallenge();
            updateDisplay();
        });
    </script>
</body>
</html>
