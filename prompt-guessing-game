        function updateDisplay() {
            document.getElementById('current-score').textContent = currentScore;
            document.getElementById('current-level').textContent = `${currentLevel}/${challenges.length}`;
            document.getElementById('attempts').textContent = attempts;
        }

        function loadChallenge() {
            const challenge = challenges[currentLevel - 1];
            if (challenge) {
                document.getElementById('challenge-title').textContent = challenge.title;
                document.getElementById('challenge-description').textContent = "×›×ª×‘×• ×¤×¨×•××¤×˜ ×©×™×¦×•×¨ ××ª ×”×ª××•× ×”";
                document.getElementById('target-image').src = challenge.image;
                document.getElementById('prompt-input').value = '';
                currentTip = 1;
                showCurrentTip();
                
                // ×¢×“×›×•×Ÿ ×›×¤×ª×•×¨×™×
                const prevBtn = document.getElementById('prev-btn');
                const nextBtn = document.getElementById('next-btn');
                
                if (currentLevel <= 1) {
                    prevBtn.style.opacity = '0.5';
                    prevBtn.disabled = true;
                    prevBtn.className = 'btn btn-secondary';
                } else {
                    prevBtn.style.opacity = '1';
                    prevBtn.disabled = false;
                    if (hasMovedNext) {
                        prevBtn.className = 'btn btn-primary';
                    } else {
                        prevBtn.className = 'btn btn-secondary';
                    }
                }
                
                // ×¢×“×›×•×Ÿ ×›×¤×ª×•×¨ ×”×‘× ×‘×”×ª×× ×œ××ª×’×¨
                if (currentLevel >= challenges.length) {
                    // ×”××ª×’×¨ ×”××—×¨×•×Ÿ - ×›×¤×ª×•×¨ "×¡×™×•×" ×©××§×¤×™×¥ ××ª ×”×•×“×¢×ª ×”×¡×™×•×
                    nextBtn.innerHTML = '×¡×™×•× ğŸ';
                    nextBtn.className = 'btn btn-primary';
                    nextBtn.onclick = showFinalMessage;
                } else {
                    // ×œ× ×”××ª×’×¨ ×”××—×¨×•×Ÿ
                    nextBtn.innerHTML = '×”×‘× â®ï¸';
                    nextBtn.className = 'btn btn-primary';
                    nextBtn.onclick = nextChallenge;
                }
                
                // ×¢×“×›×•×Ÿ ×”×ª×¦×•×’×” ×œ×•×•×“× ×©×”×¨××” × ×›×•× ×”
                updateDisplay();
            }
        }

        function showCurrentTip() {
            document.querySelectorAll('.tip').forEach(tip => tip.classList.remove('active'));
            const tip = document.getElementById(`tip-${currentTip}`);
            if (tip) {
                tip.classList.add('active');
            }
        }

        function showTip() {
            currentTip = (currentTip % 4) + 1;
            showCurrentTip();
        }

        function analyzePrompt(prompt) {
            const challenge = challenges[currentLevel - 1];
            let score = 0;
            let feedback = [];

            const words = prompt.toLowerCase();
            let matchedKeywords = 0;

            challenge.keywords.forEach(keyword => {
                if (words.includes(keyword.toLowerCase())) {
                    matchedKeywords++;
                    score += 15;
                }
            });

            if (prompt.length > 20) score += 10;
            if (prompt.length > 50) score += 10;
            if (words.includes('×¦×‘×¢') || words.includes('×¦×‘×¢×™×')) score += 5;
            if (words.includes('×ª××•×¨×”') || words.includes('××•×¨')) score += 5;
            if (words.includes('×¨×§×¢')) score += 5;

            if (matchedKeywords === challenge.keywords.length) {
                feedback.push("ğŸ¯ ×–×™×”×™×ª ××ª ×›×œ ×”××œ×× ×˜×™× ×”×¢×™×§×¨×™×™×!");
                score += 20;
            } else if (matchedKeywords > challenge.keywords.length / 2) {
                feedback.push("ğŸ‘ ×–×™×”×™×ª ×¨×•×‘ ×”××œ×× ×˜×™× ×”×—×©×•×‘×™×");
            } else {
                feedback.push("ğŸ’¡ × ×¡×” ×œ×”×•×¡×™×£ ×¤×¨×˜×™× × ×•×¡×¤×™× ×¢×œ ××” ×©×¨×•××™× ×‘×ª××•× ×”");
            }

            if (prompt.length < 20) {
                feedback.push("ğŸ“ ×”×¤×¨×•××¤×˜ ×§×¦×¨ ××™×“×™ - ×”×•×¡×£ ×™×•×ª×¨ ×¤×¨×˜×™×");
            } else if (prompt.length > 100) {
                feedback.push("âœ¨ ×¤×¨×•××¤×˜ ××¤×•×¨×˜ ×•×¢×©×™×¨!");
                score += 10;
            }

            return {
                score: Math.min(score, 100),
                feedback: feedback.join('\n')
            };
        }

        function submitPrompt() {
            const prompt = document.getElementById('prompt-input').value.trim();
            if (!prompt) {
                alert('×× × ×›×ª×•×‘ ×¤×¨×•××¤×˜ ×œ×¤× ×™ ×”×©×œ×™×—×”!');
                return;
            }

            attempts++;
            const result = analyzePrompt(prompt);
            
            currentScore += result.score;
            
            // ×”×¦×’×ª ×”××•×“×œ ×¢× ×”×ª×•×¦××•×ª
            showModal(result);
            
            updateDisplay();
        }

        function showModal(result) {
            const modalOverlay = document.getElementById('modal-overlay');
            const modalScore = document.getElementById('modal-score');
            const modalFeedback = document.getElementById('modal-feedback');
            const modalProgressFill = document.getElementById('modal-progress-fill');

            modalScore.textContent = result.score;
            modalFeedback.textContent = result.feedback;
            
            modalOverlay.classList.add('show');

            // ×× ×™××¦×™×” ×©×œ ×”×¤×¨×•×’×¨×¡ ×‘×¨
            setTimeout(() => {
                modalProgressFill.style.width = result.score + '%';
            }, 300);

            // ×¦×‘×¢ ×”×¦×™×•×Ÿ ×‘×”×ª×× ×œ×¨××”
            setTimeout(() => {
                if (result.score >= 80) {
                    modalScore.style.color = '#28a745';
                } else if (result.score >= 60) {
                    modalScore.style.color = '#ffc107';
                } else {
                    modalScore.style.color = '#dc3545';
                }
            }, 500);
        }

        function closeModal() {
            document.getElementById('modal-overlay').classList.remove('show');
        }

        function nextChallengeFromModal() {
            closeModal();
            nextChallenge();
        }

        function nextChallenge() {
            if (currentLevel < challenges.length) {
                currentLevel++;
                hasMovedNext = true;
                loadChallenge();
                updateDisplay();
            } else {
                alert(`ğŸ‰ ×¡×™×™××ª ××ª ×›×œ ×”××ª×’×¨×™×!\n×¦×™×•×Ÿ ×¡×•×¤×™: ${currentScore}\n××¡×¤×¨ × ×™×¡×™×•× ×•×ª: ${attempts}\n\n×™×© ${challenges.length} ××ª×’×¨×™× ×‘××©×—×§!`);
            }
        }

        function prevChallenge() {
            if (currentLevel > 1) {
                currentLevel--;
                loadChallenge();
                updateDisplay();
            }
        }

        // ×¡×’×™×¨×ª ×”××•×“×œ ×‘×œ×—×™×¦×” ×¢×œ ×”×¨×§×¢
        document.getElementById('modal-overlay').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // ×¡×’×™×¨×ª ×”××•×“×œ ×‘××§×© Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
            if (e.ctrlKey && e.key === 'Enter') {
                submitPrompt();
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log(`× ×˜×¢× ×• ${challenges.length} ××ª×’×¨×™×`);
            console.log('×¨×©×™××ª ×›×œ ×”××ª×’×¨×™×:', challenges.map((c, i) => `${i+1}: ${c.title}`));
            loadChallenge();
            updateDisplay();
        });
    </script>
</body>
</html>
