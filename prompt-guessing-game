    <script>
        let currentLevel = 1;
        let currentScore = 0;
        let attempts = 0;
        let currentTip = 1;
        let hasMovedNext = false;

        const challenges = [
            {
               
                title: "אתגר 1: חתול חמוד",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/cat.jpg",
                keywords: ["חתול", "כתום", "כיסא", "יושב"]
            },
            {
                title: "אתגר 2: נוף הרים",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/sedimentation.jpg.jpg",
                keywords: ["הרים", "שקיעה", "שמש", "נוף", "כתום", "צהוב"]
            },
            {
                title: "אתגר 3: רובוט עתידני",
                description: "נסה לנחש מה רואים בתמונה",
                image: "https://lomdot.education.gov.il/cet/datainformation/robot.jpg.jpg",
                keywords: ["רובוט", "צהוב", "עיניים", "שעון", "יושב", "מכונה"]
            },
            {
                title: "אתגר 4: פרח צבעוני",
                description: "נסה לנחש מה רואים בתמונה",
